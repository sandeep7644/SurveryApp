<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.surveryapp">

    <application
        android:name=".SurveyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.ui.profile.UserProfileActivity"></activity>
        <activity
            android:name=".features.ui.add_survey.AddSurveyActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".features.ui.registration.ResgistrationActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".features.ui.dashboard.DashboardActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".features.ui.login.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>